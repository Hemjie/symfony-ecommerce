{% extends 'base.html.twig'%}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        {% for product in aleaProducts %}
                            <div class="carousel-item {{ loop.index == 1 ? 'active' }}">
                                <img id="img-carousel" class="d-block w-100" src="{{ asset('img/' ~ product.urlimage) }}" alt="{{ product.name }}">
                            </div>
                        {% endfor %}
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col-12 col-md-3">
                <div class="card">
                    <div class="card-header bg-success text-white text-uppercase">
                        <i class="fa fa-heart"></i> Coup de coeur
                    </div>
                    <img id="img-card" class="img-fluid border-0" src="{{ asset('img/') ~ aleaCrush.urlimage }}" alt="aleaCrush.name">
                    <div class="card-body">
                        <h4 class="card-title text-center"><a href="{{ path('product_show', { slug : aleaCrush.slug, id : aleaCrush.id}) }}" title="View Product">
                                {% if aleaCrush.name | length > 14 %}
                                    {{ aleaCrush.name | slice(0, 14) }}...
                                {% else %}
                                    {{ aleaCrush.name }}
                                {% endif %}
                            </a></h4>
                        <div class="row">
                            <div class="col">
                                <p class="btn btn-danger btn-block">{{ aleaCrush.price }} &euro;</p>
                            </div>
                            <div class="col">
                                <a href="{{ path('product_show', { slug : aleaCrush.slug, id : aleaCrush.id}) }}" class="btn btn-success btn-block">Voir</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-3">
        <div class="row">
            <div class="col-sm">
                <div class="card">
                    <div class="card-header bg-primary text-white text-uppercase">
                        <i class="fa fa-star"></i> Derniers produits
                    </div>
                    <div class="card-body">
                        <div class="row">
                            {% for product in lastProducts %}
                                <div class="col-sm">
                                    <div class="card">
                                        <img id="img-card" class="card-img-top" src="{{ asset('img/' ~ product.urlimage) }}" alt="{{ product.name }}">
                                        <div class="card-body">
                                            <h4 class="card-title"><a href="{{ path('product_show', { slug : product.slug, id : product.id}) }}" title="View Product">
                                                    {% if product.name | length > 14 %}
                                                        {{ product.name | slice(0, 14) }}...
                                                    {% else %}
                                                        {{ product.name }}
                                                    {% endif %}
                                            </a></h4>
                                            <p class="card-text">{{ product.description }}</p>
                                            <div class="row">
                                                <div class="col">
                                                    <p class="btn btn-danger btn-block">{{ product.price }} &euro;</p>
                                                </div>
                                                <div class="col">
                                                    <a href="{{ path('product_show', { slug : product.slug, id : product.id}) }}" class="btn btn-success btn-block">Ajouter au panier</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-3 mb-4">
        <div class="row">
            <div class="col-sm">
                <div class="card">
                    <div class="card-header bg-primary text-white text-uppercase">
                        <i class="fa fa-trophy"></i> Meilleurs produits
                    </div>
                    <div class="card-body">
                        <div class="row">
                            {% for product in bestProducts %}
                                <div class="col-sm">
                                    <div class="card">
                                        <img id="img-card" class="card-img-top" src="{{ asset('img/' ~ product.url_image) }}" alt="{{ product.name }}">
                                        <div class="card-body">
                                            <h4 class="card-title"><a href="{{ path('product_show', { slug : product.slug, id : product.id}) }}" title="View Product">
                                                    {% if product.name | length > 14 %}
                                                        {{ product.name | slice(0, 14) }}...
                                                    {% else %}
                                                        {{ product.name }}
                                                    {% endif %}
                                                </a></h4>
                                            <p class="card-text">{{ product.description }}</p>
                                            <div class="row">
                                                <div class="col">
                                                    <p class="btn btn-danger btn-block">{{ product.price }} &euro;</p>
                                                </div>
                                                <div class="col">
                                                    <a href="{{ path('product_show', { slug : product.slug, id : product.id}) }}" class="btn btn-success btn-block">Ajouter au panier</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}